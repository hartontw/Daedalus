<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <title><%=name%></title>
</head>
<body>
    <% if (updated) { %>
    <div class="alert alert-success" role="alert">
        <h2>Links updated</h2>
    </div>
    <% } %>
    <h2><a href="/guilds/<%=guildID%>"><span class="badge bg-success"><%=guildName%></span></a> â€º <span class="badge bg-info"><%=name%></span></h2>
    <form id="form" action="/channels/<%=id%>" method="post" onsubmit="return allValid()">
        <% for (let l in links) { %>
        <input class="form-control" name="<%=l%>" type="text" placeholder="RSS/YouTube/..." aria-label="default input example" value="<%=links[l]%>" oninput="onInputChange(this)">
        <% } %>
        <input class="form-control" name="<%=links.length%>" type="text" placeholder="RSS/YouTube/..." aria-label="default input example" oninput="onInputChange(this)">
        <input class="btn btn-lg btn-primary btn-block" type="submit">
    </form>
</body>

<script>
function valid(value) {
    if (value && value.length > 0) {
        return value.match(/(http|https):\/\/(\w+:{0,1}\w*@)?(\S+)(:[0-9]+)?(\/|\/([\w#!:.?+=&%@!\-/]))?/);
    }
    return true;
}

function onInputChange(e) {
    if (valid(e.value)) {
        e.classList.remove('is-invalid');
    }
    else {
        e.classList.add('is-invalid');
    }
}

function allValid() {
    const inputs = document.getElementsByTagName("input");
    for(let input of inputs) {
        if (!valid(input.value)) return false;
    }
    return true;
}

$(".alert").fadeTo(2000, 500).slideUp(500, function(){
    $(".alert").slideUp(500);
});
</script>
</html>